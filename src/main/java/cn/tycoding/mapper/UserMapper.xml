<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tycoding.mapper.UserMapper">

    <!-- 用户登录的方法 -->
    <select id="login" parameterType="cn.tycoding.pojo.User" resultType="User">
        select * from tb_user where username = #{username}
    </select>


    <!-- 查询上传文件路径 -->
    <select id="getUpLoad" parameterType="Object" resultType="Object">
        select path from upload where id = #{id}
    </select>

    <!-- 保存上传文件路径 -->
    <insert id="saveUpload" parameterType="java.lang.String" >
        INSERT INTO upload (id,path) VALUE(NULL,#{path})
    </insert>

    <!-- 更改文件路径 -->
    <update id="updateLoad" parameterType="java.lang.String" >
        update upload set path = #{s} where id = 6
    </update>

</mapper>